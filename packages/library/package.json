{
  "name": "jr-testing-publish-react-component",
  "version": "0.0.1",
  "description": "A custom React component library to Testing Publishing on NPM. USELESS Lib",
  "type": "module",
  "private": false,
  "main": "dist/my-component-library.umd.js",
  "module": "dist/my-component-library.es.js",
  "types": "dist/types/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:dev": "vite build --config vite.config.dev.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:tsc": "tsc --project tsconfig.lib.json",
    "build:vite_build": "vite build --config vite.config.lib.ts",
    "build:ts_dtypes": "npx tsc --project tsconfig.lib.json",
    "build:lib": "npm run build:tsc && npm run build:vite_build && npm run build:ts_dtypes",
    "publish": "npm run build:lib && npm publish"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "rollup": "^4.26.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.11"
  },
  "keywords": ["react", "component", "library"],
  "author": "Jesus C Risquez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "MAYBE 'TODO' IN A FURTTHER FUTURE"
  }
}

